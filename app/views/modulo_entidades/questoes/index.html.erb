<div class="titulo-pagina">
  Questões »
</div>
<br />

<% if @questoes.any? %>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Tipo</th>
      </tr>
    </thead>
    <tbody>
      <% @questoes.each do |q| %>
        <tr>
          <td><%= q.titulo %></td>
          <td><%= q.tipo_verbose %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <strong>Sem registros para exibir!</strong>
<% end %>

<br />
<%= link_to 'Voltar', [:entidade, @checklist], class: 'btn' %>