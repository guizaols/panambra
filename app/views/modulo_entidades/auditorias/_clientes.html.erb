<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h3>Clientes »</h3>
</div>

<div class="modal-body">
	<% if @clientes.present? %>
		<table class="table table-striped table-condensed">
		  <thead>
		  	<tr>
		    	<th>Código</th>
		      <th>Cliente</th>
		    </tr>
		  </thead>
		  <tbody>
		  	<% @clientes.each do |objeto| %>
			    <tr>
			    	<td><%= radio_button_tag 'codigo_cliente', objeto.codigo %></td>
			      <td><%= objeto.codigo %></td>
			      <td><%= objeto.nome %></td>
			    </tr>
		    <% end %>
		  </tbody>
		</table>
	<% end %>
</div>

<div class="modal-footer">
	<%= submit_tag 'Liberar', class: 'btn btn-inverse', data: { disable_with: 'Salvando...' } %>
	<%= link_to 'Fechar', '#', class: 'btn', :'data-dismiss' => 'modal', :'aria-hidden' => true %>
</div>

<script type="text/javascript">
	$('tr').click(function() {
    $('tr').find('input[type=radio]').each(function() {
			$(this).attr('checked', false);
    });
    $('input[type=radio]', this).attr('checked','checked');
	});
</script>
