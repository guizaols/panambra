<div id="mensagens" class="alert alert-error" style="display:none"></div>

<%= form_for [:entidade, @auditoria], remote: true do |f| %>
	<% @auditoria.carrega_itens_checklist.each_with_index do |item_checklist, index| %>
		<%= monta_checklist_de_auditoria(item_checklist, index) %>
	<% end %>

  <div class="actions form-actions">
    <%= f.submit 'Salvar', class: 'btn btn-inverse', data: { disable_with: 'Salvando...' } %>
    <% if current_user.present? && current_user.permitted_to?(:auditorias, :index) %>
      <%= link_to 'Cancelar', [:entidade, :auditorias], class: 'btn' %>
    <% end %>
  </div>
<% end %>

<script type="text/javascript">
  jQuery(function($) {
    <% if params[:respondendo].present? %>
      $('.btn-group').remove();
      $('.footer').remove();
    <% end %>
  });
</script>
